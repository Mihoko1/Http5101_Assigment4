
@{
    ViewBag.Title = "New";
}


<div id="containerbox">
    <nav>
        <a class="navlink" href="/Teacher/List">Go back to list</a>

    </nav>

    <h2>New</h2>
    <form class="addForm" name="teacherForm" method="POST" action="/Teacher/Create">
        <div>
            
            <label for="TeacherFname">First Name: </label>
            <input type="text" id="TeacherFname" name="TeacherFname" pattern="[a-zA-Z]" />
        </div>
        <div>
            <div class="warning" id="lnameMessage" style="color:red;"></div>
            <label for="TeacherLname">Last Name: </label>
            <input type="text" id="TeacherLname" name="TeacherLname" />

        </div>
        <div>
            <div class="warning" id="eMessage" style="color:red;"></div>
            <label for="EmployeeNumber">Employee Number: </label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" />

        </div>
        <div>
            <div class="warning" id="hMessage" style="color:red;"></div>
            <label for="HireDate">Hire Date: </label>
            <input type="date" id="HireDate" name="HireDate" min="2000-01-01" />

        </div>
        <div>
            <div class="warning" id="sMessage" style="color:red;"></div>
            <label for="Salary">Salary: </label>
            <input type="number" id="Salary" name="Salary" placeholder="00.00" step="0.01" />
        </div>

        <div class="marginTop">
            <input type="submit" class="submit" value="Create" />
        </div>
    </form>

</div>