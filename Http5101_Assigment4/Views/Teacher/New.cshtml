
@{
    ViewBag.Title = "New";
}


<div id="containerbox">
    <h2>New</h2>
    <form name="teacherForm" method="POST" action="/Teacher/Create">
        <div>
            <div class="warning" id="fnameMessage" style="color:red;">@ViewBag.FnameError</div>
            <label for="TeacherFname">First Name</label>
            <input type="text" id="TeacherFname" name="TeacherFname"pattern="[a-zA-Z]" />
        </div>
        <div>
            <div class="warning" id="lnameMessage" style="color:red;">Please input valid last name</div>
            <label for="TeacherLname">Last Name</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />

        </div>
        <div>
            <div class="warning" id="eMessage" style="color:red;">Please input valid employee number</div>
            <label for="EmployeeNumber">Employee Number</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" />

        </div>
        <div>
            <div class="warning" id="hMessage" style="color:red;">Please input valid hire date</div>
            <label for="HireDate">Hire Date</label>
            <input type="date" id="HireDate" name="HireDate" min="2000-01-01" />

        </div>
        <div>
            <div class="warning" id="sMessage" style="color:red;">Please input valid number format</div>
            <label for="Salary">Salary</label>
            <input type="number" id="Salary" name="Salary" placeholder="00.00" step="0.01" />
        </div>
        
        <div>
            <input type="submit" class="submit" value="Create" />
        </div>
    </form>

 </div>